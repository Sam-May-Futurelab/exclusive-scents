<!-- sections/announcement-bar.liquid -->
<style>
  .announcement-bar {
    width: 100%;
    background-color: #FAF300;
    color: #000;
    height: {{ section.settings.height }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    font-size: 16px;
    font-weight: 700;
    letter-spacing: 0.06em;
    padding: 0;
    position: relative;
    z-index: 50;
    border-bottom: 1px solid rgba(0, 0, 0, 0.12);
  }
  .announcement-track-wrapper {
    display: flex;
    width: max-content;
    animation: scroll-left {{ section.settings.scroll_speed }}s linear infinite;
    will-change: transform;
    animation-play-state: running !important;
    direction: rtl;
  }
  .announcement-track { display: flex; direction: ltr; }
  .announcement-item {
    flex: 0 0 auto;
    padding: 0 3.25rem;
    white-space: nowrap;
    text-transform: uppercase;
  }
  .announcement-item strong { font-weight: 800; }
  @keyframes scroll-left {
    0% { transform: translateX(0%); }
    100% { transform: translateX(-50%); }
  }
  @media (max-width: 480px) {
    .announcement-bar { font-size: 14px; }
    .announcement-item { padding: 0 2rem; }
  }
</style>

