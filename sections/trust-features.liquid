{{ 'section-trust-features.css' | asset_url | stylesheet_tag }}

<section class="trust-features color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <div class="trust-features__header">
        <h2 class="trust-features__title">{{ section.settings.title }}</h2>
        {%- if section.settings.subtitle != blank -%}
          <p class="trust-features__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endunless -%}
    
    <div class="trust-features__grid">
      {%- for block in section.blocks -%}
        <div class="trust-feature-card" {{ block.shopify_attributes }}>
          <div class="trust-feature-card__inner">
            {%- if block.settings.icon_type == 'custom' and block.settings.custom_icon != blank -%}
              <div class="trust-feature-card__icon">
                <img
                  src="{{ block.settings.custom_icon | image_url: width: 80 }}"
                  alt="{{ block.settings.custom_icon.alt | escape }}"
                  loading="lazy"
                  width="80"
                  height="80"
                  class="trust-feature-card__icon-image"
                />
              </div>
            {%- elsif block.settings.icon_type == 'svg' -%}
              <div class="trust-feature-card__icon">
                {%- case block.settings.icon_name -%}
                  {%- when 'star' -%}
                    <svg class="trust-feature-card__icon-svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2l2.4 7.4h7.8l-6.3 4.6 2.4 7.4L12 16.8l-6.3 4.6 2.4-7.4L2 9.4h7.8z"/>
                    </svg>
                  {%- when 'shield' -%}
                    <svg class="trust-feature-card__icon-svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
                    </svg>
                  {%- when 'leaf' -%}
                    <svg class="trust-feature-card__icon-svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M17 8C8 10 5.9 16.17 3.82 21.34L5.71 22L6.66 19.7C7.14 19.87 7.64 20 8 20C19 20 22 3 22 3C21 5 14 5.25 9 6.25C4 7.25 2 11.5 2 13.5C2 15.5 3.75 17.25 3.75 17.25C7 8 17 8 17 8Z"/>
                    </svg>
                  {%- when 'clock' -%}
                    <svg class="trust-feature-card__icon-svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67V7z"/>
                    </svg>
                  {%- when 'heart' -%}
                    <svg class="trust-feature-card__icon-svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                    </svg>
                  {%- when 'truck' -%}
                    <svg class="trust-feature-card__icon-svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M16 8V6a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h2v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-4a2 2 0 0 0-2-2h-4zM6 18a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm10 0a2 2 0 1 1 0-4 2 2 0 0 1 0 4z"/>
                    </svg>
                  {%- else -%}
                    <svg class="trust-feature-card__icon-svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                {%- endcase -%}
              </div>
            {%- endif -%}
            
            {%- if block.settings.title != blank -%}
              <h3 class="trust-feature-card__title">{{ block.settings.title }}</h3>
            {%- endif -%}
            
            {%- if block.settings.description != blank -%}
              <div class="trust-feature-card__description">{{ block.settings.description }}</div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
    
    {%- if section.settings.show_testimonial -%}
      <div class="trust-features__testimonial">
        <div class="trust-testimonial">
          <div class="trust-testimonial__stars">
            {%- for i in (1..5) -%}
              <svg class="trust-testimonial__star" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            {%- endfor -%}
          </div>
          
          {%- if section.settings.testimonial_text != blank -%}
            <blockquote class="trust-testimonial__quote">
              "{{ section.settings.testimonial_text }}"
            </blockquote>
          {%- endif -%}
          
          {%- if section.settings.testimonial_author != blank -%}
            <cite class="trust-testimonial__author">— {{ section.settings.testimonial_author }}</cite>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% schema %}
{
  "name": "Trust Features",
  "tag": "section", 
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "Why Choose <em>Exclusive Scents</em>?"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Established in 2022, we believe luxury shouldn't cost a fortune"
    },
    {
      "type": "checkbox",
      "id": "show_testimonial",
      "label": "Show testimonial",
      "default": true
    },
    {
      "type": "textarea",
      "id": "testimonial_text",
      "label": "Testimonial text",
      "default": "Amazing quality fragrances that last all day. I've tried many expensive brands but these are just as good for a fraction of the price!"
    },
    {
      "type": "text",
      "id": "testimonial_author",
      "label": "Testimonial author",
      "default": "Sarah M., Verified Customer"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2", 
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Trust Feature",
      "settings": [
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon type",
          "options": [
            {
              "value": "svg",
              "label": "Built-in icon"
            },
            {
              "value": "custom",
              "label": "Custom image"
            }
          ],
          "default": "svg"
        },
        {
          "type": "select",
          "id": "icon_name",
          "label": "Icon",
          "options": [
            {
              "value": "star",
              "label": "Star (Reviews)"
            },
            {
              "value": "shield",
              "label": "Shield (Quality/Security)"
            },
            {
              "value": "leaf",
              "label": "Leaf (Vegan/Natural)"
            },
            {
              "value": "clock",
              "label": "Clock (Long lasting)"
            },
            {
              "value": "heart",
              "label": "Heart (Love/Care)"
            },
            {
              "value": "truck",
              "label": "Truck (Fast shipping)"
            }
          ],
          "default": "star"
        },
        {
          "type": "image_picker",
          "id": "custom_icon",
          "label": "Custom icon image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "5-Star Reviews"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Thousands of happy customers love our long-lasting, premium fragrances.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon_name": "star",
            "title": "5-Star Reviews",
            "description": "<p>Thousands of happy customers love our long-lasting, premium fragrances.</p>"
          }
        },
        {
          "type": "feature", 
          "settings": {
            "icon_name": "leaf",
            "title": "Vegan & Cruelty Free",
            "description": "<p>All our fragrances are ethically made with no animal testing.</p>"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon_name": "clock",
            "title": "Long Lasting",
            "description": "<p>Our Extrait De Parfum concentration ensures all-day fragrance performance.</p>"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon_name": "truck",
            "title": "Fast & Free Shipping",
            "description": "<p>Free UK shipping on orders over £25, with express options available.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
