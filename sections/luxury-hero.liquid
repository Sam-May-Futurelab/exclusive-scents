{{ 'section-luxury-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .luxury-hero-{{ section.id }} {
    min-height: {{ section.settings.desktop_height }}vh;
  }
  
  @media screen and (max-width: 749px) {
    .luxury-hero-{{ section.id }} {
      min-height: {{ section.settings.mobile_height }}vh;
    }
  }
{%- endstyle -%}

<section class="luxury-hero luxury-hero-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <div class="luxury-hero__container">
    {%- if section.settings.image != blank -%}
      <div class="luxury-hero__media">
        <img
          src="{{ section.settings.image | image_url: width: 1920 }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="eager"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
          class="luxury-hero__image"
        />
        <div class="luxury-hero__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
      </div>
    {%- endif -%}
    
    <div class="luxury-hero__content">
      <div class="luxury-hero__content-container page-width">
        {%- if section.settings.subheading != blank -%}
          <p class="luxury-hero__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h1 class="luxury-hero__heading">{{ section.settings.heading }}</h1>
        {%- endif -%}
        
        {%- if section.settings.text != blank -%}
          <div class="luxury-hero__text">{{ section.settings.text }}</div>
        {%- endif -%}
        
        <div class="luxury-hero__buttons">
          {%- if section.settings.button_label_1 != blank -%}
            <a href="{{ section.settings.button_link_1 }}" class="luxury-hero__button luxury-hero__button--primary">
              {{ section.settings.button_label_1 | escape }}
            </a>
          {%- endif -%}
          
          {%- if section.settings.button_label_2 != blank -%}
            <a href="{{ section.settings.button_link_2 }}" class="luxury-hero__button luxury-hero__button--secondary">
              {{ section.settings.button_label_2 | escape }}
            </a>
          {%- endif -%}
        </div>
        
        {%- if section.settings.trust_badges -%}
          <div class="luxury-hero__trust">
            <div class="luxury-hero__trust-item">
              <svg class="luxury-hero__icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <span>5-Star Reviews</span>
            </div>
            <div class="luxury-hero__trust-item">
              <svg class="luxury-hero__icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Vegan & Cruelty Free</span>
            </div>
            <div class="luxury-hero__trust-item">
              <svg class="luxury-hero__icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M8 16l2.879-2.879m0 0a3 3 0 104.243-4.242 3 3 0 00-4.243 4.242zM21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Long Lasting</span>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Luxury Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Image overlay opacity",
      "default": 30
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Desktop height",
      "default": 90
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Mobile height",
      "default": 70
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Designer Inspired Fragrances"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Luxury Scents That <em>Last</em>"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Discover our collection of premium Extrait De Parfum - strong, long-lasting, and ethically made.</p>"
    },
    {
      "type": "text",
      "id": "button_label_1",
      "label": "First button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "First button link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Second button label",
      "default": "Explore Collections"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Second button link"
    },
    {
      "type": "checkbox",
      "id": "trust_badges",
      "label": "Show trust badges",
      "default": true
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "Luxury Hero"
    }
  ]
}
{% endschema %}
