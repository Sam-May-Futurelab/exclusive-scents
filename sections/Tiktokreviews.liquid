{% comment %}
  Section: Reviews Carousel (native scroll, no arrows)
  - Simple, fast, consistent rectangular sizing
  - Horizontal scrollbar only (no arrows/dots)
{% endcomment %}

<section class="rc-wrap" id="reviews-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="rc-inner page-width">
    {% if section.settings.title != blank %}
      <h2 class="rc-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div
      class="rc-scroll"
      style="
        --rc-card-w: {{ section.settings.card_width | default: 280 }}px;
        --rc-gap: {{ section.settings.gap | default: 12 }}px;
        --rc-radius: {{ section.settings.radius | default: 14 }}px;
        --rc-shadow: {{ section.settings.shadow | default: '0 6px 18px rgba(0,0,0,.06)' }};
        --rc-aspect: {{ section.settings.aspect_ratio | default: '4 / 5' }};
      "
    >
      <div class="rc-track">
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            {% assign img = block.settings.image %}
            <figure class="rc-card" {{ block.shopify_attributes }}>
              <div class="rc-media">
                {% if img != blank %}
                  {{ img | image_url: width: 1600 | image_tag:
                    loading: 'lazy',
                    sizes: '(min-width: 1200px) 300px, (min-width: 750px) 260px, 70vw',
                    widths: '320,480,720,960,1200,1600',
                    alt: block.settings.alt | escape
                  }}
                {% else %}
                  <div class="rc-placeholder" aria-hidden="true">Add image</div>
                {% endif %}
              </div>
              {% if block.settings.caption != blank %}
                <figcaption class="rc-cap">{{ block.settings.caption }}</figcaption>
              {% endif %}
            </figure>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <style>
    .rc-wrap {
      --rc-title: var(--rc-title, #111);
      --rc-muted: color-mix(in oklab, #111 60%, white 40%);
      -webkit-font-smoothing: antialiased;
      font-synthesis-weight: none;
    }

    .rc-inner { width: 100%; margin: 0 auto; }

    /* Title "Reviews" — modern, clean */
    .rc-title{
      margin: 0 0 12px 0;
      font-size: clamp(22px, 2.2vw, 32px);
      line-height: 1.1;
      letter-spacing: -0.02em;
      font-weight: 700;
    }

    /* Native scroll with bottom scrollbar only */
    .rc-scroll{
      overflow-x: auto;
      overflow-y: visible;
      scrollbar-gutter: stable both-edges;
      -webkit-overflow-scrolling: touch;
      padding-bottom: 10px; /* ensures the scrollbar sits visually “below” */
    }

    /* Horizontal card track */
    .rc-track{
      display: grid;
      grid-auto-flow: column;
      grid-auto-columns: var(--rc-card-w);
      gap: var(--rc-gap);
      scroll-snap-type: x mandatory;
    }

    .rc-card{ scroll-snap-align: start; margin: 0; }

    /* Uniform rectangle sizing */
    .rc-media{
      position: relative;
      width: 100%;
      aspect-ratio: var(--rc-aspect);
      border-radius: var(--rc-radius);
      overflow: hidden;
      box-shadow: var(--rc-shadow);
      background: #f6f7f8;
    }
    .rc-media img{
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    .rc-placeholder{
      width: 100%; height: 100%;
      display: grid; place-items: center;
      font-size: 12px; color: var(--rc-muted);
      border-radius: inherit;
      background:
        linear-gradient(135deg, #f2f2f2 25%, transparent 25%) -10px 0/20px 20px,
        linear-gradient(225deg, #f2f2f2 25%, transparent 25%) -10px 0/20px 20px,
        linear-gradient(315deg, #f2f2f2 25%, transparent 25%) 0px 0/20px 20px,
        linear-gradient(45deg, #f2f2f2 25%, transparent 25%) 0px 0/20px 20px;
    }

    .rc-cap{
      margin-top: 8px;
      font-size: 12px;
      line-height: 1.4;
      color: var(--rc-muted);
      text-wrap: balance;
    }

    /* Minimal scrollbar styling (WebKit) */
    .rc-scroll::-webkit-scrollbar{ height: 8px; }
    .rc-scroll::-webkit-scrollbar-track{ background: #ececec; border-radius: 999px; }
    .rc-scroll::-webkit-scrollbar-thumb{ background: #c7c7c7; border-radius: 999px; }
    .rc-scroll:hover::-webkit-scrollbar-thumb{ background: #b5b5b5; }

    @media (max-width: 480px){
      .rc-scroll{ padding-bottom: 8px; }
    }
  </style>
</section>

{% schema %}
{
  "name": "Reviews – Simple Carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Reviews" },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Card aspect ratio",
      "default": "4 / 5",
      "options": [
        { "value": "4 / 5", "label": "4:5 (portrait – screenshots)" },
        { "value": "3 / 4", "label": "3:4 (portrait)" },
        { "value": "1 / 1", "label": "1:1 (square)" },
        { "value": "9 / 16", "label": "9:16 (tall portrait)" },
        { "value": "16 / 9", "label": "16:9 (landscape)" }
      ]
    },
    { "type": "text", "id": "card_width", "label": "Card width (px)", "default": "280" },
    { "type": "text", "id": "gap", "label": "Gap between cards (px)", "default": "12" },
    { "type": "text", "id": "radius", "label": "Corner radius (px)", "default": "14" },
    { "type": "text", "id": "shadow", "label": "Card shadow", "default": "0 6px 18px rgba(0,0,0,.06)" }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Review image" },
        { "type": "text", "id": "alt", "label": "Image alt text", "default": "Customer review screenshot" },
        { "type": "text", "id": "caption", "label": "Optional caption" }
      ]
    }
  ],
  "max_blocks": 50,
  "presets": [
    {
      "name": "Reviews – Simple Carousel",
      "category": "Media",
      "blocks": [ { "type": "slide" }, { "type": "slide" }, { "type": "slide" } ]
    }
  ]
}
{% endschema %}
