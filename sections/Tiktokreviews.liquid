{% comment %}
  Section: TikTok Reviews Carousel (adaptive, native scroll)
  - Title with optional TikTok logo badge
  - Optional star strip with review count
  - Cards auto-size to image (no forced aspect ratio)
  - Native horizontal scrollbar (no arrows)
{% endcomment %}

<section class="rc-wrap" id="reviews-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="rc-inner page-width">

    {% if section.settings.title != blank %}
      <div class="rc-head">
        <h2 class="rc-title">
          {% if section.settings.show_tiktok_logo %}
            <span class="rc-logo" aria-hidden="true">
              {% assign mode = section.settings.tiktok_logo_mode %}
              <svg class="rc-tiktok-svg {% if mode == 'brand' %}rc-brand{% endif %}" viewBox="0 0 256 296" width="28" height="28" role="img">
                <!-- Simple TikTok mark (path simplified), brand mode uses layered fills via CSS -->
                <path class="rc-tiktok-core" d="M170.3 0c9.9 17.6 26.6 31.5 47.7 40.2v41.4c-16.9-1.1-33.4-7.1-47.7-17v108.9c0 67.7-56 122.2-125.1 122.2C20.9 296 0 275.7 0 250.9c0-24.8 20.9-45.1 45.2-45.1 6.3 0 12.3 1.3 17.8 3.7a46.3 46.3 0 0 1-1.9-13.2c0-39.8 33-72.1 73.8-72.1 4.6 0 9.1.4 13.4 1.2V0h22z"/>
              </svg>
            </span>
          {% endif %}
          <span>{{ section.settings.title }}</span>
        </h2>

        {% if section.settings.show_stars %}
          <div class="rc-stars">
            <span class="rc-star" aria-hidden="true">★</span>
            <span class="rc-star" aria-hidden="true">★</span>
            <span class="rc-star" aria-hidden="true">★</span>
            <span class="rc-star" aria-hidden="true">★</span>
            <span class="rc-star" aria-hidden="true">★</span>
            {% if section.settings.star_copy != blank %}
              <span class="rc-star-copy">{{ section.settings.star_copy }}</span>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div
      class="rc-scroll"
      style="
        --rc-gap: {{ section.settings.gap | default: 12 }}px;
        --rc-radius: {{ section.settings.radius | default: 14 }}px;
        --rc-shadow: {{ section.settings.shadow | default: '0 6px 18px rgba(0,0,0,.06)' }};
        --rc-max-h: {{ section.settings.max_height | default: 380 }}px;
      "
    >
      <div class="rc-track">
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            {% assign img = block.settings.image %}
            <figure class="rc-card" {{ block.shopify_attributes }}>
              <div class="rc-media">
                {% if img != blank %}
                  {{ img | image_url: width: 2000 | image_tag:
                    loading: 'lazy',
                    sizes: '(min-width: 1200px) 40vw, (min-width: 750px) 60vw, 90vw',
                    widths: '480,720,960,1200,1600,2000',
                    alt: block.settings.alt | escape
                  }}
                {% else %}
                  <div class="rc-placeholder" aria-hidden="true">Add image</div>
                {% endif %}
              </div>
              {% if block.settings.caption != blank %}
                <figcaption class="rc-cap">{{ block.settings.caption }}</figcaption>
              {% endif %}
            </figure>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <style>
    .rc-wrap {
      --rc-muted: color-mix(in oklab, #111 60%, white 40%);
      -webkit-font-smoothing: antialiased;
      font-synthesis-weight: none;
    }
    .rc-inner { width: 100%; margin: 0 auto; }

    .rc-head{ display: grid; place-items: center; gap: 8px; margin-bottom: 14px; }

    /* Title — premium, uses theme heading font */
    .rc-title{
      margin: 0;
      font-size: clamp(26px, 2.6vw, 38px);
      font-weight: 700;
      letter-spacing: -0.01em;
      line-height: 1.15;
      color: #111;
      text-align: center;
      font-family: inherit;
      display: inline-flex;
      align-items: center;
      gap: 10px;
    }

    /* TikTok logo modes */
    .rc-logo{ display: inline-flex; }
    .rc-tiktok-svg { display: block; }
    .rc-tiktok-svg .rc-tiktok-core { fill: currentColor; }
    /* Brand layered effect using text-shadow-like glow (subtle) */
    .rc-tiktok-svg.rc-brand .rc-tiktok-core {
      /* dark core */
      fill: #111;
      /* optional subtle dual-tone outline illusion */
      filter: drop-shadow(1px 0 #25F4EE) drop-shadow(-1px 0 #FE2C55);
    }

    /* Stars row */
    .rc-stars{
      display: inline-flex;
      align-items: center;
      gap: 6px;
      font-size: 14px;
      color: #111;
    }
    .rc-star{ font-size: 14px; line-height: 1; }
    .rc-star-copy{ color: var(--rc-muted); font-size: 13px; margin-left: 4px; }

    /* Native horizontal scroll with visible bottom scrollbar */
    .rc-scroll{
      overflow-x: auto;
      overflow-y: visible;
      padding-bottom: 10px;
      -webkit-overflow-scrolling: touch;
      scrollbar-gutter: stable both-edges;
    }

    /* Content-sized columns; each card width = its content width */
    .rc-track{
      display: grid;
      grid-auto-flow: column;
      grid-auto-columns: max-content;
      align-items: start;
      gap: var(--rc-gap);
      scroll-snap-type: x mandatory;
    }

    .rc-card{ scroll-snap-align: start; margin: 0; width: max-content; }

    /* Frame adapts to image: no forced aspect ratio, no crop */
    .rc-media{
      display: block;
      border-radius: var(--rc-radius);
      overflow: hidden;
      box-shadow: var(--rc-shadow);
      background: #f6f7f8;
      width: max-content;
      max-width: 90vw; /* guard on small screens */
    }
    .rc-media img{
      height: auto;
      width: auto;
      max-height: var(--rc-max-h);
      max-width: 100%;
      display: block;
    }

    .rc-placeholder{
      display: grid; place-items: center;
      width: 260px; height: 180px;
      font-size: 12px; color: var(--rc-muted);
      border-radius: var(--rc-radius);
      background:
        linear-gradient(135deg, #f2f2f2 25%, transparent 25%) -10px 0/20px 20px,
        linear-gradient(225deg, #f2f2f2 25%, transparent 25%) -10px 0/20px 20px,
        linear-gradient(315deg, #f2f2f2 25%, transparent 25%) 0px 0/20px 20px,
        linear-gradient(45deg, #f2f2f2 25%, transparent 25%) 0px 0/20px 20px;
    }

    .rc-cap{
      margin-top: 8px;
      font-size: 12px;
      line-height: 1.4;
      color: var(--rc-muted);
      text-align: center;
      text-wrap: balance;
    }

    /* Minimal scrollbar styling (WebKit) */
    .rc-scroll::-webkit-scrollbar{ height: 8px; }
    .rc-scroll::-webkit-scrollbar-track{ background: #ececec; border-radius: 999px; }
    .rc-scroll::-webkit-scrollbar-thumb{ background: #c7c7c7; border-radius: 999px; }
    .rc-scroll:hover::-webkit-scrollbar-thumb{ background: #b5b5b5; }

    @media (max-width: 480px){
      .rc-stars{ font-size: 13px; }
      .rc-star{ font-size: 13px; }
      .rc-scroll{ padding-bottom: 8px; }
    }
  </style>
</section>

{% schema %}
{
  "name": "TikTok Reviews Carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Check Out Our TikTok Reviews" },
    { "type": "checkbox", "id": "show_tiktok_logo", "label": "Show TikTok logo", "default": true },
    {
      "type": "select",
      "id": "tiktok_logo_mode",
      "label": "TikTok logo style",
      "default": "brand",
      "options": [
        { "value": "brand", "label": "Brand accent" },
        { "value": "mono", "label": "Monochrome" }
      ]
    },
    { "type": "checkbox", "id": "show_stars", "label": "Show stars row", "default": true },
    { "type": "text", "id": "star_copy", "label": "Star row copy", "default": "100+ reviews" },
    { "type": "text", "id": "max_height", "label": "Max image height (px)", "default": "380" },
    { "type": "text", "id": "gap", "label": "Gap between cards (px)", "default": "12" },
    { "type": "text", "id": "radius", "label": "Corner radius (px)", "default": "14" },
    { "type": "text", "id": "shadow", "label": "Card shadow", "default": "0 6px 18px rgba(0,0,0,.06)" }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Review image" },
        { "type": "text", "id": "alt", "label": "Image alt text", "default": "Customer review screenshot" },
        { "type": "text", "id": "caption", "label": "Optional caption" }
      ]
    }
  ],
  "max_blocks": 100,
  "presets": [
    {
      "name": "TikTok Reviews Carousel",
      "category": "Media",
      "blocks": [ { "type": "slide" }, { "type": "slide" }, { "type": "slide" } ]
    }
  ]
}
{% endschema %}
