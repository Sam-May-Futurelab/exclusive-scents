{% comment %}
  Section: TikTok Reviews Carousel (centered stars, gold, adaptive)
  - Title + star strip with "100+ Reviews" (centered)
  - Native horizontal scrollbar (no arrows)
  - Cards auto-size to image width; height capped
{% endcomment %}

<section class="rc-wrap" id="reviews-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="rc-inner page-width">

    {% if section.settings.title != blank %}
      <div class="rc-head">
        <h2 class="rc-title">{{ section.settings.title }}</h2>

        {% if section.settings.show_stars %}
          <div class="rc-stars" role="img" aria-label="{{ section.settings.star_copy | default: '100+ Reviews' }}">
            <!-- Reusable star symbol + gradient + glow -->
            <svg width="0" height="0" style="position:absolute"><defs>
              <symbol id="rc-star" viewBox="0 0 24 24">
                <path d="M12 2.4l2.9 5.85 6.46.94-4.68 4.56 1.1 6.42L12 17.92 6.22 20.17l1.1-6.42L2.64 9.19l6.46-.94L12 2.4z"/>
              </symbol>
              <linearGradient id="rc-star-grad" x1="0" y1="0" x2="1" y2="1">
                <stop offset="0" stop-color="var(--star-a)" />
                <stop offset="1" stop-color="var(--star-b)" />
              </linearGradient>
              <filter id="rc-star-glow" x="-50%" y="-50%" width="200%" height="200%">
                <feGaussianBlur in="SourceGraphic" stdDeviation="0.5" result="blur"/>
                <feMerge>
                  <feMergeNode in="blur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
            </defs></svg>

            <span class="rc-star-icon" aria-hidden="true"><svg viewBox="0 0 24 24"><use href="#rc-star"></use></svg></span>
            <span class="rc-star-icon" aria-hidden="true"><svg viewBox="0 0 24 24"><use href="#rc-star"></use></svg></span>
            <span class="rc-star-icon" aria-hidden="true"><svg viewBox="0 0 24 24"><use href="#rc-star"></use></svg></span>
            <span class="rc-star-icon" aria-hidden="true"><svg viewBox="0 0 24 24"><use href="#rc-star"></use></svg></span>
            <span class="rc-star-icon" aria-hidden="true"><svg viewBox="0 0 24 24"><use href="#rc-star"></use></svg></span>

            {% if section.settings.star_copy != blank %}
              <span class="rc-star-copy">{{ section.settings.star_copy }}</span>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div
      class="rc-scroll"
      style="
        --rc-gap: {{ section.settings.gap | default: 12 }}px;
        --rc-radius: {{ section.settings.radius | default: 14 }}px;
        --rc-shadow: {{ section.settings.shadow | default: '0 6px 18px rgba(0,0,0,.06)' }};
        --rc-max-h: {{ section.settings.max_height | default: 380 }}px;
      "
    >
      <div class="rc-track">
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            {% assign img = block.settings.image %}
            <figure class="rc-card" {{ block.shopify_attributes }}>
              <div class="rc-media">
                {% if img != blank %}
                  {{ img | image_url: width: 2000 | image_tag:
                    loading: 'lazy',
                    sizes: '(min-width: 1200px) 40vw, (min-width: 750px) 60vw, 90vw',
                    widths: '480,720,960,1200,1600,2000',
                    alt: block.settings.alt | escape
                  }}
                {% else %}
                  <div class="rc-placeholder" aria-hidden="true">Add image</div>
                {% endif %}
              </div>
              {% if block.settings.caption != blank %}
                <figcaption class="rc-cap">{{ block.settings.caption }}</figcaption>
              {% endif %}
            </figure>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <style>
    .rc-wrap {
      --rc-muted: color-mix(in oklab, #111 60%, white 40%);
      /* Gold stars */
      --star-a: #F5C542;
      --star-b: #DDAF2B;
      -webkit-font-smoothing: antialiased;
      font-synthesis-weight: none;
    }
    .rc-inner { width: 100%; margin: 0 auto; }

    .rc-head{
      display: grid;
      place-items: center;
      gap: 8px; /* tighter space between title and stars */
      margin-bottom: 14px;
      text-align: center;
    }

    /* Title — premium, inherits theme heading font */
    .rc-title{
      margin: 0;
      font-size: clamp(26px, 2.6vw, 38px);
      font-weight: 700;
      letter-spacing: -0.01em;
      line-height: 1.15;
      color: #111;
      font-family: inherit;
    }

    /* Stars row — perfectly centered and tighter spacing */
    .rc-stars{
      display: flex;
      justify-content: center;   /* center horizontally */
      align-items: center;       /* align icons and text vertically */
      gap: 6px;                  /* reduced space between stars */
      line-height: 1;
      user-select: none;
      width: 100%;
    }
    .rc-star-icon{
      display: inline-flex;
      width: 18px; height: 18px; /* star size */
      filter: url(#rc-star-glow);
    }
    .rc-star-icon svg{
      width: 100%; height: 100%;
      fill: url(#rc-star-grad);
      paint-order: stroke;
      stroke: rgba(0,0,0,.15);
      stroke-width: 0.3;
    }
    .rc-star-copy{
      margin-left: 6px;          /* space after last star */
      font-size: 14px;
      font-weight: 600;          /* more apparent */
      color: #111;               /* black label as requested */
    }

    /* Native horizontal scroll with visible bottom scrollbar */
    .rc-scroll{
      overflow-x: auto;
      overflow-y: visible;
      padding-bottom: 10px;
      -webkit-overflow-scrolling: touch;
      scrollbar-gutter: stable both-edges;
    }

    /* Content-sized columns; each card width = its content width */
    .rc-track{
      display: grid;
      grid-auto-flow: column;
      grid-auto-columns: max-content;
      align-items: start;
      gap: var(--rc-gap);
      scroll-snap-type: x mandatory;
    }

    .rc-card{ scroll-snap-align: start; margin: 0; width: max-content; }

    /* Frame adapts to image: no forced aspect ratio, no crop */
    .rc-media{
      display: block;
      border-radius: var(--rc-radius);
      overflow: hidden;
      box-shadow: var(--rc-shadow);
      background: #f6f7f8;
      width: max-content;
      max-width: 90vw; /* guard for very wide images on mobile */
    }
    .rc-media img{
      height: auto;
      width: auto;
      max-height: var(--rc-max-h);
      max-width: 100%;
      display: block;
    }

    .rc-placeholder{
      display: grid; place-items: center;
      width: 260px; height: 180px;
      font-size: 12px; color: var(--rc-muted);
      border-radius: var(--rc-radius);
      background:
        linear-gradient(135deg, #f2f2f2 25%, transparent 25%) -10px 0/20px 20px,
        linear-gradient(225deg, #f2f2f2 25%, transparent 25%) -10px 0/20px 20px,
        linear-gradient(315deg, #f2f2f2 25%, transparent 25%) 0px 0/20px 20px,
        linear-gradient(45deg, #f2f2f2 25%, transparent 25%) 0px 0/20px 20px;
    }

    .rc-cap{
      margin-top: 8px;
      font-size: 12px;
      line-height: 1.4;
      color: var(--rc-muted);
      text-align: center;
      text-wrap: balance;
    }

    /* Minimal scrollbar styling (WebKit) */
    .rc-scroll::-webkit-scrollbar{ height: 8px; }
    .rc-scroll::-webkit-scrollbar-track{ background: #ececec; border-radius: 999px; }
    .rc-scroll::-webkit-scrollbar-thumb{ background: #c7c7c7; border-radius: 999px; }
    .rc-scroll:hover::-webkit-scrollbar-thumb{ background: #b5b5b5; }

    @media (max-width: 480px){
      .rc-star-icon{ width: 17px; height: 17px; }
      .rc-star-copy{ font-size: 13.5px; }
      .rc-scroll{ padding-bottom: 8px; }
    }
  </style>
</section>

{% schema %}
{
  "name": "TikTok Reviews Carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Check Out Our TikTok Reviews" },
    { "type": "checkbox", "id": "show_stars", "label": "Show stars row", "default": true },
    { "type": "text", "id": "star_copy", "label": "Star row copy", "default": "100+ Reviews" },
    { "type": "text", "id": "max_height", "label": "Max image height (px)", "default": "380" },
    { "type": "text", "id": "gap", "label": "Gap between cards (px)", "default": "12" },
    { "type": "text", "id": "radius", "label": "Corner radius (px)", "default": "14" },
    { "type": "text", "id": "shadow", "label": "Card shadow", "default": "0 6px 18px rgba(0,0,0,.06)" }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Review image" },
        { "type": "text", "id": "alt", "label": "Image alt text", "default": "Customer review screenshot" },
        { "type": "text", "id": "caption", "label": "Optional caption" }
      ]
    }
  ],
  "max_blocks": 100,
  "presets": [
    {
      "name": "TikTok Reviews Carousel",
      "category": "Media",
      "blocks": [ { "type": "slide" }, { "type": "slide" }, { "type": "slide" } ]
    }
  ]
}
{% endschema %}
