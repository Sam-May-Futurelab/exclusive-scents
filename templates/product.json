as-scarcity{ border-color: rgba(249,115,22,.28); }\n  .as-dot{\n    width:10px; height:10px; border-radius:999px; background:var(--orange);\n    box-shadow:0 0 0 0 rgba(249,115,22,.30);\n    animation:as-pulse var(--blink) cubic-bezier(.4,.0,.2,1) infinite alternate;\n    flex:0 0 10px;\n  }\n  .as-qty{ color:var(--orange-deep); font-weight:800; }\n  @keyframes as-pulse{\n    0%   { transform:scale(1);   opacity:1;   box-shadow:0 0 0 0 rgba(249,115,22,.30); }\n    100% { transform:scale(1.15); opacity:.7; box-shadow:0 0 0 12px rgba(249,115,22,0); }\n  }\n\n  /* Shipping (truck) */\n  .as-ship{ border-color: rgba(16,185,129,.28); }\n  .as-truck{\n    position:relative; display:inline-flex; align-items:center; justify-content:center;\n    width:34px; height:24px; color:var(--ok-deep);\n    animation: as-drive var(--drive) ease-in-out infinite alternate;\n  }\n  @keyframes as-drive{ 0%{ transform:translateX(0)} 100%{ transform:translateX(4px)} }\n  .as-truck-svg{ width:34px; height:24px; display:block; animation: as-bob var(--bob) ease-in-out infinite; }\n  @keyframes as-bob{ 0%,100%{ transform:translateY(0)} 50%{ transform:translateY(-1.2px)} }\n\n  .as-streak{\n    position:absolute; left:-8px; top:50%; height:2px; width:12px; background:currentColor;\n    border-radius:2px; opacity:.35; transform:translateY(-50%);\n    animation:as-streak 1.6s linear infinite;\n  }\n  .as-streak.s2{ left:-14px; width:9px; animation-delay:.25s; opacity:.25; }\n  .as-streak.s3{ left:-19px; width:7px; animation-delay:.5s;  opacity:.2; }\n  @keyframes as-streak{ 0%{ transform:translate(-2px,-50%); opacity:.35 } 100%{ transform:translate(-16px,-50%); opacity:0 } }\n\n  /* Sample (premium perfume icon + spray) */\n  .as-sample{ border-color: color-mix(in srgb, var(--blue) 28%, transparent); }\n  .as-perfume{ width:34px; height:24px; color:var(--blue); display:inline-flex; align-items:center; justify-content:center; flex:0 0 auto; }\n  .as-perfume svg{ width:34px; height:24px; display:block; }\n\n  .spray path, .spray circle{ fill:currentColor; stroke:none; opacity:.0; }\n  .spray .arc1 > circle{ animation: as-spray var(--spray) ease-out infinite; }\n  .spray .arc2 > circle{ animation: as-spray var(--spray) ease-out infinite .15s; }\n  .spray .arc3 > circle{ animation: as-spray var(--spray) ease-out infinite .3s; }\n\n  @keyframes as-spray{\n    0%   { transform: translateX(0) translateY(0) scale(.85); opacity: 0; }\n    18%  { transform: translateX(2px) translateY(-.3px) scale(.95); opacity: .55; }\n    60%  { transform: translateX(6px) translateY(-.6px) scale(1.05); opacity: .28; }\n    100% { transform: translateX(10px) translateY(-1px) scale(1.1);  opacity: 0; }\n  }\n\n  /* Motion accessibility */\n  @media (prefers-reduced-motion: reduce){\n    .as-dot, .as-truck, .as-truck-svg, .as-streak, .spray circle{ animation:none !important; opacity:1 !important; }\n  }\n</style>\n\n<div class=\"as-badges\" aria-label=\"Product highlights\">\n  <!-- Almost sold out -->\n  <div class=\"as-line as-scarcity\">\n    <span class=\"as-dot\" aria-hidden=\"true\"></span>\n    <span class=\"as-text\">\n      Almost sold out\n      {% if show_qty %}\n        <span class=\"as-qty\"> — only {{ qty }} left</span>\n      {% endif %}\n    </span>\n  </div>\n\n  <!-- Shipping / dispatch -->\n  <div class=\"as-line as-ship\">\n    <span class=\"as-truck\" aria-hidden=\"true\">\n      <!-- Wheel-less truck silhouette -->\n      <svg class=\"as-truck-svg\" viewBox=\"0 0 64 44\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"3\" stroke-linecap=\"round\" stroke-linejoin=\"round\">\n        <rect x=\"4\" y=\"12\" width=\"36\" height=\"18\" rx=\"3\"></rect>\n        <path d=\"M40 18h10l8 7v5H40z\"></path>\n        <rect x=\"45\" y=\"19\" width=\"6\" height=\"5\" rx=\"1\"></rect>\n        <path d=\"M7 30h9\"></path>\n      </svg>\n      <span class=\"as-streak\"></span>\n      <span class=\"as-streak s2\"></span>\n      <span class=\"as-streak s3\"></span>\n    </span>\n\n    <span class=\"as-text\">\n      {% if show_minimum %}\n        <b>FREE SHIPPING</b> on orders over £{{ minimum_amount }}+ - <b>SAME DAY</b> dispatch\n      {% else %}\n        <b>SAME DAY</b> dispatch\n      {% endif %}\n    </span>\n  </div>\n\n  <!-- Free sample -->\n  <div class=\"as-line as-sample\">\n    <span class=\"as-perfume\" aria-hidden=\"true\">\n      <!-- Premium perfume bottle icon with elegant spray -->\n      <svg viewBox=\"0 0 64 44\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"2.4\" stroke-linecap=\"round\" stroke-linejoin=\"round\" aria-hidden=\"true\">\n        <!-- Bottle silhouette (soft shoulders) -->\n        <path d=\"M12 19\n                 q0-4 4-4h12q4 0 4 4v10\n                 q0 4-4 4H16q-4 0-4-4Z\"></path>\n        <!-- Neck -->\n        <rect x=\"20\" y=\"14\" width=\"8\" height=\"5\" rx=\"2\"></rect>\n        <!-- Cap with top line -->\n        <rect x=\"18\" y=\"9\" width=\"12\" height=\"5\" rx=\"1.5\"></rect>\n        <path d=\"M19 9h10\"></path>\n        <!-- Nozzle spout -->\n        <path d=\"M28 15 L35 13\"></path>\n        <!-- Nozzle tip -->\n        <circle cx=\"36\" cy=\"12.8\" r=\"1.2\" fill=\"currentColor\" stroke=\"none\"></circle>\n        <!-- Optional label line -->\n        <rect x=\"18\" y=\"22\" width=\"12\" height=\"6\" rx=\"2\"></rect>\n\n        <!-- Spray (three gentle arcs of micro-drops) -->\n        <g class=\"spray\" transform=\"translate(36,12)\">\n          <g class=\"arc1\">\n            <circle cx=\"4.5\" cy=\"-0.3\" r=\"1.2\"></circle>\n            <circle cx=\"7.5\" cy=\"-0.5\" r=\"1.0\"></circle>\n            <circle cx=\"10.5\" cy=\"-0.8\" r=\"0.9\"></circle>\n          </g>\n          <g class=\"arc2\">\n            <circle cx=\"4.0\" cy=\"1.0\" r=\"1.1\"></circle>\n            <circle cx=\"7.0\" cy=\"0.8\" r=\"0.95\"></circle>\n            <circle cx=\"10.0\" cy=\"0.5\" r=\"0.85\"></circle>\n          </g>\n          <g class=\"arc3\">\n            <circle cx=\"4.2\" cy=\"2.0\" r=\"1.0\"></circle>\n            <circle cx=\"7.2\" cy=\"1.7\" r=\"0.9\"></circle>\n            <circle cx=\"10.2\" cy=\"1.3\" r=\"0.8\"></circle>\n          </g>\n        </g>\n      </svg>\n    </span>\n    <span class=\"as-text\">\n      <b>FREE sample</b> with a 50ml purchase\n    </span>\n  </div>\n</div>"
